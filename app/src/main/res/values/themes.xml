<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FusenNote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/appBackground</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <!-- Status Bar -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- App Bar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/appBackground</item>

        <!-- App background -->
        <item name="android:windowBackground">@color/appBackground</item>

    </style>


    <style name="CustomDialog" parent="ThemeOverlay.AppCompat.Dialog">

        <!-- dialog background -->
        <item name="android:background">@color/appBackground</item>

        <!-- title -->
        <item name="android:textColor">@color/strong</item>

        <!-- message -->
        <item name="android:textColorPrimary">@color/weak</item>

        <!-- positive/negative button -->
        <item name="colorPrimary">@color/imageColor</item>

    </style>


    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">

        <item name="android:windowBackground">@color/appBackground</item>
        <item name="colorAccent">@color/appBackground</item>
        <item name="selectableItemBackgroundBorderless">@color/appBackground</item>

        <item name="android:textColorSecondaryInverse">@color/weak</item>
        <item name="android:textColorPrimaryInverse">@color/weak</item>

        <item name="android:textColorSecondary">@color/weak</item>
        <item name="android:textColorPrimary">@color/weak</item>
<!--        <item name="colorPrimary">@color/imageColor</item>-->
<!--        <item name="android:colorPrimary">@color/imageColor</item>-->

        <item name="colorControlActivated">@color/imageColor</item>

    </style>



    <style name="CustomTimePickerDialog" parent="Theme.AppCompat.Light.Dialog">



    </style>







</resources>